<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="uk.ac.aber.adk15.controllers.ConfigurationControllerImpl">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>

    </padding>

    <Label text="Max. Threads" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Spinner fx:id="maxThreads" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="8" max="256" min="0"/>
        </valueFactory>
    </Spinner>

    <Label text="Executor Type" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <ComboBox fx:id="executorTypeSelector" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <buttons>
            <Button mnemonicParsing="false" text="Save" onAction="#configureApplication" />
            <Button mnemonicParsing="false" text="Cancel" onAction="#cancelConfiguration" />
        </buttons>
    </ButtonBar>
</GridPane>
